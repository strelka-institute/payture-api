{
  "name": "@strelka/payture-api",
  "version": "0.0.0",
  "description": "Payture InPay API",
  "repository": "git@github.com:strelka-institute/payture.git",
  "author": "John Grishin <hi@exah.me>",
  "license": "MIT",
  "sideEffects": false,
  "main": "lib/index.js",
  "files": [
    "./lib"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:lib": "babel src -d lib",
    "build:docs": "documentation build src/** -f md -o docs/API.md",
    "prebuild": "npm run cleanup",
    "watch": "run-p \"build:* -- -w\" \"test:unit -- -w\"",
    "prewatch": "npm run cleanup",
    "test": "run-s test:*",
    "test:unit": "ava test",
    "test:lint": "eslint src test",
    "deploy": "np --no-cleanup",
    "cleanup": "rimraf lib",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "preversion": "npm run build",
    "precommit": "lint-staged"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "./src/**/*.js": "eslint",
    "./test/**/*.js": "eslint"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "standard",
    "rules": {
      "no-shadow": 2
    }
  },
  "auto-changelog": {
    "unreleased": true,
    "commitLimit": 20,
    "template": ".changelog.hbs"
  },
  "ava": {
    "verbose": true
  },
  "browserslist": "> 1%",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "auto-changelog": "^1.8.0",
    "ava": "^1.0.0-beta.8",
    "babel-eslint": "9.0.0",
    "documentation": "^8.1.2",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "^0.79.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "np": "^3.0.4",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "nanoid": "^1.2.3",
    "xml-library": "^0.0.3"
  }
}
